.hero{
  height: 100vh;
}
.hero image{
  /* 图片的宽高比，等比例，不能模糊 */
  height:38.2vh;
}
.hero.white {
  background: #ffff;
}
.hero .content {
  padding-top: 10%;
}
.hero .content.centered {
  text-align:center;
}
.hero .header {
  font-size: 72rpx;
  font-weight: bold;
  margin: 0 12% 16rpx;/* 顺时针 上右下左  */
}
.hero .sub-header {
  font-size: 32rpx;
  letter-spacing: 3px;
  margin-bottom: 8px;
  color: rgba(0, 0, 0, 0.85);
}
.hero .description {
  padding: 0 12%;
  margin-bottom: 64rpx;
}